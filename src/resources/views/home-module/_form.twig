<input type="hidden" name="_token" value="{{ csrf_token() }}">

<div class="form-group">
    <label class="col-sm-2 control-label">分组</label>
    <div class="col-sm-8">
        {% autoescape false %}
            {{ app.html.dropDownList('HomeModule[group_id]',entity.group_id|default(''), mixList,{'class':'form-control', 'prompt': '请选择'}) }}
        {% endautoescape %}
        <span class="help-block">{# 帮助信息 #}</span>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-2 control-label" for="input-quantity">商品数量</label>
    <div class="col-sm-8">
        {% if entity.tag == constant('Entity\\HomeModule::TAG_ONE') %}
            <input type="text" name="HomeModule[quantity]" class="form-control"
                   value="{{ app.request.get('HomeModule').quantity|default(entity.quantity) }}" id="input-quantity">
        {% else %}
            <input type="hidden" name="HomeModule[quantity]" class="form-control"
                   value="{{ app.request.get('HomeModule').quantity|default(entity.quantity) }}" id="input-quantity">
        {% endif %}
        <span class="help-block">{{ quantityDesc }}</span>
    </div>
</div>

