<input type="hidden" name="_token" value="{{ csrf_token()}}">

<div class="form-group">
    <label class="col-sm-2 control-label" for="input-name">名称</label>
    <div class="col-sm-8">
        <input type="text" name="Mix[name]" class="form-control"
               value="{{ app.request.get('Mix').name|default(entity.name) }}" id="input-name" >
        <span class="help-block">{# 帮助信息 #}</span>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-2 control-label" for="input-icon">ICON</label>

    <div class="col-sm-8">
        <input type="hidden" name="fileKey" class="js-file-key">

        <div class="show-image">
            <img class="js-input-image" src="{{ entity.getIconUrl()|default(asset('images/no-pic.jpg')) }}" width="300px">
        </div>

        <span class="btn btn-primary btn-sm fileinput-button" style="margin-top: 10px;">
            <span>上传...</span>
            <input class="fileupload" type="file" name="file">
        </span>

        <!-- 进度条 -->
        <div id="jquery-file-upload-progress" class="progress progress-striped active"
             style="display: none;">
            <div class="progress-bar progress-bar-info"></div>
        </div>
    </div>
</div>

