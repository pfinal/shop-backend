{% extends '@AdminBundle/layout.twig' %}
{% block title %}商品标签{% endblock %}
{% set leftMenuActive='Tag' %}

{% block contentRight %}

    <div class="page-title">商品分组</div>

    <div class="content-top">
        <ul class="top-nav">
            <li class="active"><a href="">{{ tag.name }}:新增商品</a></li>
        </ul>
        <div class="clearfix"></div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                {# 错误提示信息 #}
                {% if error is defined and error is not empty %}
                    <div class="ui-tips bg-info">
                        <span class="icon glyphicon glyphicon-info-sign"></span>
                        <span>{{ error }}</span>
                    </div>
                {% endif %}

                {# 表单 #}
                <form action="{{ url('admin/tag/product-create',{'tag_id':tag.id}) }}" method="post" class="form-horizontal mt15">

                    <input type="hidden" name="_token" value="{{ csrf_token()}}">

                    <div class="form-group">
                        <label class="col-sm-2 control-label">商品ID</label>
                        <div class="col-sm-8">
                            <input type="text" name="TagProduct[product_id]" class="form-control"
                                   value="{{ app.request.get('TagProduct').product_id|default('0') }}">
                            <span class="help-block">{# 帮助信息 #}</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-8">
                            <button type="submit" class="btn btn-primary">提交</button>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
{% endblock %}
